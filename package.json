{
  "name": "noutore-biyori",
  "version": "1.0.0",
  "description": "脳トレ・クイズに特化したWebメディア「脳トレ日和」のフロントエンド（HTML/CSS）リポジトリです。",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "predev": "node scripts/preflight.mjs",
    "dev": "pnpm run dev:all",
    "dev:all": "run-p dev:studio dev:web",
    "dev:web": "svelte-kit dev --host 0.0.0.0 --port 5173",
    "dev:studio": "sanity dev --cwd studio --host 0.0.0.0 --port 3333",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "postcreate": "pnpm --dir studio install",
    "test": "echo \"no tests yet\" && exit 0",
    "format": "pnpm dlx prettier --write .",
    "format:check": "pnpm dlx prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NBWMedia0807/noutore-biyori.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NBWMedia0807/noutore-biyori/issues"
  },
  "homepage": "https://github.com/NBWMedia0807/noutore-biyori#readme",
  "dependencies": {
    "@sanity/client": "^7.8.2",
    "@sanity/image-url": "^1.1.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.27.1",
    "vite": "^7.1.0"
  },
  "devDependencies": {
    "@sanity/cli": "^3.64.0",
    "npm-run-all2": "^6.2.2",
    "rimraf": "^6.0.1",
    "svelte": "^5.38.3"
  }
}
